<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".pertemuan8.DetailDataActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

    <TextView
            android:id="@+id/lblDetailData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/poppins_bold"
            android:text="Detail data"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:layout_marginVertical="20dp"/>

        <ImageButton
            android:id="@+id/imageButtonEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:backgroundTint="@color/white"
            android:contentDescription="edit"
            android:paddingTop="20dp"
            app:srcCompat="@drawable/baseline_edit_30" />

    </LinearLayout>

    <TextView
        android:id="@+id/lblNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Nama"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginLeft="15dp" />

    <TextView
        android:id="@+id/txtNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Nama"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginLeft="15dp" />

    <TextView
        android:id="@+id/lblTlp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Telepon"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/txtTlp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Telepon"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginLeft="15dp" />

    <TextView
        android:id="@+id/lblPekerjaan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Pekerjaan"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/txtPekerjaan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Pekerjaan"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginLeft="15dp" />

    <TextView
        android:id="@+id/lblJurusan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Jurusan"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/txtJurusan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Jurusan"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginLeft="15dp" />

    <TextView
        android:id="@+id/lblTahun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Tahun"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/txtTahun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Tahun"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginLeft="15dp" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="Delete"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/remove"
        android:layout_marginLeft="27dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="20dp"/>

</LinearLayout>